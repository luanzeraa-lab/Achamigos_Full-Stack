{
  "openapi": "3.0.3",
  "info": {
    "title": "Microsserviço Achamigos",
    "description": "Documentação do cadastro e autenticação de usuário",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://achamigos-full-stack.onrender.com",
      "description": "Servidor de produção"
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "UserRegister": {
        "type": "object",
        "required": ["nome", "userLogin", "senha", "email"],
        "properties": {
          "nome": { "type": "string", "example": "any" },
          "cnpj": { "type": "string", "example": "any" },
          "telefone": { "type": "string", "example": "any" },
          "userLogin": { "type": "string", "example": "any" },
          "senha": { "type": "string", "example": "any" },
          "email": { "type": "string", "example": "any" },
          "endereco": { "type": "string", "example": "any" },
          "tipo": { "type": "string", "example": "any" },
          "userStatus": { "type": "string", "example": "any" },
          "linkUser": { "type": "string", "example": "any" }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["userLogin", "senha"],
        "properties": {
          "userLogin": { "type": "string", "example": "any" },
          "senha": { "type": "string", "example": "any" }
        }
      }
    }
  },
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Cadastrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserRegister" }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "403": { "description": "Forbidden" },
          "500": { "description": "Internal Server Error" }
        },
        "security": [{ "apiKeyAuth": [] }]
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLogin" }
            }
          }
        },
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "500": { "description": "Internal Server Error" }
        },
        "security": [{ "apiKeyAuth": [] }]
      }
    }
  }
}
